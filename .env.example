# Environment Configuration
NODE_ENV=production
VITE_APP_NAME="NFT Nexus"

# Solana Configuration
VITE_SOLANA_NETWORK=devnet
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com
# TODO: Replace with your actual program ID after deployment
VITE_PROGRAM_ID=YourProgramIdHere
VITE_MARKETPLACE_NAME="NFT-Nexus"

# Solana RPC Configuration
VITE_COMMITMENT=confirmed
VITE_PREFLIGHT_COMMITMENT=confirmed
VITE_SKIP_PREFLIGHT=false

# Transaction Configuration
VITE_DEFAULT_COMPUTE_UNIT_LIMIT=200000
VITE_DEFAULT_COMPUTE_UNIT_PRICE=1000
VITE_TRANSACTION_TIMEOUT=30000
VITE_MAX_RETRIES=3

# API Configuration (if using backend)
VITE_API_URL=https://your-api-domain.com/api

# NFT Metadata Configuration
VITE_METADATA_API_URL=https://your-metadata-api.com
VITE_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_PRIORITY_FEES=true
VITE_ENABLE_TRANSACTION_RETRY=true

# Development Configuration
VITE_DEV_ENABLE_LOGS=false
VITE_DEV_MOCK_WALLET=false